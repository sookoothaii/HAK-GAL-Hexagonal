# HAK-GAL Frontend Configuration Template
# Copy this file to .env and adjust values as needed

# API Configuration
VITE_API_BASE_URL=http://localhost:8088
VITE_API_TIMEOUT=30000
VITE_API_KEY=your_api_key_here

# WebSocket Configuration
VITE_WS_URL=http://localhost:8088
VITE_WS_PATH=/socket.io
VITE_WS_RECONNECTION_ATTEMPTS=3
VITE_WS_RECONNECTION_DELAY=2000
VITE_WS_RECONNECTION_DELAY_MAX=10000

# Port Configuration
VITE_BACKEND_PORT=5002
VITE_GOVERNOR_PORT=5001
VITE_PROXY_PORT=8088
VITE_FRONTEND_PORT=5173

# Feature Flags
VITE_USE_PRO_UI=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_COMMAND_PALETTE_ENABLED=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG_MODE=false

# System Defaults (0 = load dynamically from backend)
VITE_INITIAL_FACT_COUNT=0
VITE_INITIAL_GROWTH_RATE=0
VITE_INITIAL_ENTITY_COUNT=0
VITE_INITIAL_PREDICATE_COUNT=0

# Performance Limits
VITE_QUERY_HISTORY_LIMIT=100
VITE_SYSTEM_LOAD_HISTORY_LIMIT=50
VITE_REWARD_HISTORY_LIMIT=100

# Production Example:
# VITE_API_BASE_URL=https://api.hakgal.com
# VITE_WS_URL=wss://api.hakgal.com
# VITE_ENABLE_DEBUG_MODE=false

# Development Example:
# VITE_API_BASE_URL=http://localhost:8088
# VITE_ENABLE_DEBUG_MODE=true
# VITE_ENABLE_MOCK_DATA=true
